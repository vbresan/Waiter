<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="biz.binarysolutions.waiter"
    android:versionCode="1"
    android:versionName="1.0"
    >
    <application 
        android:icon="@drawable/icon" 
        android:label="@string/app_name"
        android:debuggable="true"
        >
    
        <activity android:name=".MainActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".activities.sync.SyncDataActivity"
            android:theme="@android:style/Theme.Translucent"
        />
        <activity android:name=".activities.selectwaiter.SelectWaiterActivity"
            android:theme="@style/NoTitleDialogTheme"
        />
        <activity android:name=".activities.selectwaiter.CheckPinActivity"
            android:theme="@style/NoTitleDialogTheme"
        />        
        <activity android:name=".activities.selecttable.SelectTableActivity"
            android:theme="@style/NoTitleDialogTheme"
        />
        <activity android:name=".activities.addorderitem.SelectCategoryActivity" />
        <activity android:name=".activities.addorderitem.SelectArticleActivity" />
        <activity android:name=".activities.addorderitem.GetOrderItemActivity" />
        <activity android:name=".activities.addorderitem.SelectExtrasActivity" />
        <activity android:name=".activities.addorderitem.SelectFavoriteActivity" />
        <activity android:name=".activities.storno.StornoActivity" />
        <activity android:name=".activities.send.order.SendOrderActivity"
            android:theme="@android:style/Theme.Translucent"
        />
        <activity android:name=".activities.send.storno.SendStornoActivity"
            android:theme="@android:style/Theme.Translucent"
        />

    </application>
    
    <uses-sdk android:minSdkVersion="3" android:targetSdkVersion="8" />
    <uses-permission android:name="android.permission.INTERNET" />
    
    <supports-screens
       android:largeScreens="true"
       android:normalScreens="true"
       android:smallScreens="true"
       android:anyDensity="true" 
    />

</manifest> 